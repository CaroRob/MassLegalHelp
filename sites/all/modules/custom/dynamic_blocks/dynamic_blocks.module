    $pdfName["chapter"] = strtolower(str_replace(' ', '-', $pdfDisplayTitle["chapter"]));

    // 3. Construct download links
	  // 3.a For question pages, remove the last piece (/partx) from the url
    if (is_numeric(substr($url, -1))) {
      $url=dirname($url);
