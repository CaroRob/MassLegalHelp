function addtolist(&$listItem, $title, $href, $prefix) {
	$listItem = array(			
		'data' => array(				
			'#title' => $title,
			'#href' => $href,
			'#type' => 'link',
			),
		'#prefix' => $prefix,
		'#suffix' => '</p>',			
	);
	return $listItem;	
}
